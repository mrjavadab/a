    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // --- Element References ---
            const loginForm = document.getElementById('login-form');
            const passwordInput = document.getElementById('password');
            const togglePasswordBtn = document.getElementById('toggle-password');
            const submitButton = document.getElementById('submit-button');
            const errorMessageDiv = document.getElementById('error-message');

            // --- Password Toggle Functionality ---
            togglePasswordBtn.addEventListener('click', function() {
                const icon = this.querySelector('i');
                // Toggle the type attribute
                const type = passwordInput.getAttribute('type') === 'password' ? 'text' : 'password';
                passwordInput.setAttribute('type', type);
                
                // Toggle the icon and aria-label
                icon.classList.toggle('fa-eye');
                icon.classList.toggle('fa-eye-slash');
                this.setAttribute('aria-label', type === 'password' ? 'نمایش رمز عبور' : 'پنهان کردن رمز عبور');
            });

            // --- Form Submission Handling ---
            loginForm.addEventListener('submit', function(event) {
                event.preventDefault(); // Prevent traditional form submission

                // --- 1. Start Loading State ---
                submitButton.disabled = true;
                submitButton.classList.add('loading');
                errorMessageDiv.classList.add('hidden'); // Hide previous errors
                
                // --- 2. Get Form Data ---
                const username = document.getElementById('username').value;
                const password = passwordInput.value;

                // --- 3. Simulate API Call ---
                // In a real application, you would use fetch() to send data to your server.
                console.log('Sending data to server:', { username, password });
                
                setTimeout(() => {
                    // --- 4. Handle API Response ---
                    if (username === 'kohanbon' && password === '12345') {
                        // On Success
                        errorMessageDiv.classList.add('hidden');
                        submitButton.classList.remove('bg-teal-600', 'hover:bg-teal-700');
                        submitButton.classList.add('bg-green-600');
                        submitButton.querySelector('.button-text').textContent = 'ورود موفقیت‌آمیز بود!';
                        // In a real app, you would redirect here:
                        // window.location.href = '/dashboard';
                    } else {
                        // On Failure
                        errorMessageDiv.textContent = 'نام کاربری یا رمز عبور وارد شده اشتباه است.';
                        errorMessageDiv.classList.remove('hidden');
                        // Reset button state after showing error
                        submitButton.disabled = false;
                        submitButton.classList.remove('loading');
                    }
                }, 1500); // Simulate a 1.5-second network delay
            });
        });
    </script>

