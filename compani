    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const API_KEY = ""; 
            const API_MODEL = "gemini-2.5-flash-preview-05-20";

            // --- Mock Data ---
            const locations = {
                'بندر شانگهای': { x: 700, y: 150 }, 'بندرعباس': { x: 350, y: 250 },
                'کارخانه گوانگژو': { x: 680, y: 200 }, 'انبار تهران': { x: 300, y: 100 },
                'بندر هامبورگ': { x: 100, y: 80 }, 'بندر انزلی': { x: 280, y: 50 },
                'بندر جبل علی': { x: 380, y: 280 }
            };

            let shipments = [
                { id: 'SH-1024', from: 'بندر شانگهای', to: 'بندرعباس', status: 'در گمرک', value: '۵ میلیارد تومان', finance_eligible: false, progress: 100 },
                { id: 'SH-1025', from: 'کارخانه گوانگژو', to: 'انبار تهران', status: 'در حال حمل', value: '۱۵ میلیارد تومان', finance_eligible: true, progress: 60 },
                { id: 'SH-1026', from: 'بندر هامبورگ', to: 'بندر انزلی', status: 'تحویل شده', value: '۳ میلیارد تومان', finance_eligible: false, progress: 100 },
                { id: 'SH-1027', from: 'بندر جبل علی', to: 'بندرعباس', status: 'در حال حمل', value: '۸ میلیارد تومان', finance_eligible: true, progress: 30 },
            ];
            
            const mockData = {
                shipmentStatus: { labels: ['در حال حمل', 'در گمرک', 'تحویل شده', 'با تأخیر'], data: [2, 1, 1, 0] },
                performance: { labels: ['شرکت حمل A', 'شرکت حمل B', 'ترخیص‌کار C', 'انبار D'], data: [2, 4, 3.5, 1] },
            };
            
            // --- UI Elements ---
            const mainHeaderTitle = document.getElementById('main-header-title');
            const tabButtons = document.querySelectorAll('.tab-btn-side');
            const contentSections = document.querySelectorAll('.content-section');
            const shipmentFilterInput = document.getElementById('shipment-filter');
            const shipmentModal = document.getElementById('shipment-modal');
            const modalCloseBtn = document.getElementById('modal-close-btn');
            const modalTitle = document.getElementById('modal-title');
            const modalBody = document.getElementById('modal-body');

            // --- Gemini API Call ---
            const callGeminiAPI = async (prompt) => {
                const payload = { contents: [{ parts: [{ text: prompt }] }] };
                let retries = 0;
                while (retries < 3) {
                    try {
                        const response = await fetch(`https://generativelanguage.googleapis.com/v1beta/models/${API_MODEL}:generateContent?key=${API_KEY}`, {
                            method: 'POST', headers: { 'Content-Type': 'application/json' }, body: JSON.stringify(payload)
                        });
                        if (!response.ok) throw new Error(`API Error: ${response.status}`);
                        const result = await response.json();
                        return result?.candidates?.[0]?.content?.parts?.[0]?.text || null;
                    } catch (error) {
                        console.error('API call failed:', error);
                        retries++;
                        await new Promise(res => setTimeout(res, 1000 * retries));
                    }
                }
                return 'متأسفانه در برقراری ارتباط با سرویس مدیریت هوشمند مشکلی پیش آمده است.';
            };
            
            const showLoading = (element) => {
                element.innerHTML = `<div class="flex items-center justify-center gap-2"><div class="smart-loading-spinner"></div><span>در حال پردازش...</span></div>`;
                element.classList.remove('hidden');
            };

            // --- Chart Rendering ---
            const shipmentStatusChart = new Chart(document.getElementById('shipmentStatusChart').getContext('2d'), {
                type: 'doughnut', data: { labels: mockData.shipmentStatus.labels, datasets: [{ data: mockData.shipmentStatus.data, backgroundColor: ['#3b82f6', '#f59e0b', '#10b981', '#ef4444'] }] },
                options: { responsive: true, maintainAspectRatio: false, plugins: { legend: { position: 'bottom', labels: {font: { family: 'Vazirmatn' }} } } }
            });
            new Chart(document.getElementById('performanceChart').getContext('2d'), {
                type: 'bar', data: { labels: mockData.performance.labels, datasets: [{ label: 'میانگین زمان (روز)', data: mockData.performance.data, backgroundColor: '#16a34a' }] },
                options: { responsive: true, maintainAspectRatio: false, plugins: { legend: { display: false } } }
            });
            
            // --- Table Population ---
            const shipmentTbody = document.getElementById('shipment-table-body');
            const financeTbody = document.getElementById('finance-table-body');

            function getStatusClass(status) {
                if (status === 'در حال حمل') return 'status-transit';
                if (status === 'در گمرک') return 'status-customs';
                if (status === 'تحویل شده') return 'status-delivered';
                return 'status-delayed';
            }

            function renderTables(filteredShipments = shipments) {
                shipmentTbody.innerHTML = filteredShipments.map(s => `
                    <tr class="border-b border-gray-200 hover:bg-gray-50 cursor-pointer" data-shipment-id="${s.id}">
                        <td class="table-cell font-mono">${s.id}</td>
                        <td class="table-cell">${s.from}</td>
                        <td class="table-cell">${s.to}</td>
                        <td class="table-cell"><span class="status-badge ${getStatusClass(s.status)}">${s.status}</span></td>
                        <td class="table-cell">
                            <button class="text-blue-600 hover:text-blue-800" title="مشاهده جزئیات"><i class="fa-solid fa-eye"></i></button>
                        </td>
                    </tr>`).join('');
                
                financeTbody.innerHTML = shipments.filter(s => s.finance_eligible).map(s => `
                     <tr class="border-b border-gray-200 hover:bg-gray-50">
                        <td class="table-cell font-mono">${s.id}</td>
                        <td class="table-cell font-bold">${s.value}</td>
                        <td class="table-cell"><span class="status-badge status-eligible">واجد شرایط</span></td>
                        <td class="table-cell">
                            <button class="smart-finance-request-btn text-xs px-3 py-1 bg-indigo-100 text-indigo-700 font-semibold rounded hover:bg-indigo-200" data-shipment-id="${s.id}">آماده‌سازی درخواست</button>
                        </td>
                    </tr>
                `).join('');
            }

            // --- Modal Logic ---
            function showShipmentModal(shipmentId) {
                const shipment = shipments.find(s => s.id === shipmentId);
                if (!shipment) return;
                modalTitle.innerText = `جزئیات محموله ${shipment.id}`;
                modalBody.innerHTML = `
                    <p><strong>مبدأ:</strong> ${shipment.from}</p>
                    <p><strong>مقصد:</strong> ${shipment.to}</p>
                    <p><strong>وضعیت:</strong> <span class="status-badge ${getStatusClass(shipment.status)}">${shipment.status}</span></p>
                    <p><strong>ارزش:</strong> ${shipment.value}</p>
                    <p><strong>پیشرفت مسیر:</strong> ${shipment.progress}%</p>
                    <div class="mt-4 pt-4 border-t">
                        <h4 class="font-bold mb-2">تحلیل با مدیریت هوشمند ملی</h4>
                        <button class="smart-predict-delay-btn text-sm px-4 py-2 bg-indigo-600 text-white font-semibold rounded-lg hover:bg-indigo-700 flex items-center gap-2" data-shipment-id="${shipment.id}">
                            <i class="fa-solid fa-wand-magic-sparkles"></i> پیش‌بینی تأخیر
                        </button>
                        <div id="smart-delay-response-${shipment.id}" class="hidden smart-response-box mt-4"></div>
                    </div>
                `;
                shipmentModal.classList.remove('hidden');
            }

            modalCloseBtn.addEventListener('click', () => shipmentModal.classList.add('hidden'));
            shipmentModal.addEventListener('click', (e) => {
                if (e.target === shipmentModal) {
                    shipmentModal.classList.add('hidden');
                }
            });
            shipmentTbody.addEventListener('click', (e) => {
                const row = e.target.closest('tr');
                if (row && row.dataset.shipmentId) {
                    showShipmentModal(row.dataset.shipmentId);
                }
            });
            modalBody.addEventListener('click', (e) => {
                 const predictBtn = e.target.closest('.smart-predict-delay-btn');
                 if (predictBtn) {
                    const shipmentId = predictBtn.dataset.shipmentId;
                    const responseBox = document.getElementById(`smart-delay-response-${shipmentId}`);
                    handleSmartRequest(predictBtn, responseBox, () => `شما سیستم مدیریت هوشمند ملی برای تحلیل لجستیک هستید. برای محموله ${shipmentId}، با توجه به داده‌های ترافیک فعلی و سوابق گمرکی، احتمال تأخیر را پیش‌بینی کرده و یک دلیل اصلی و **مکان احتمالی** (مثلا گمرک بندرعباس) برای آن ذکر کنید.`);
                 }
            });

            // --- Map Canvas Logic ---
            const canvas = document.getElementById('shipmentMap');
            const ctx = canvas.getContext('2d');
            let animationFrameId;

            function drawMap() {
                ctx.clearRect(0, 0, canvas.width, canvas.height);
                // Draw locations
                for (const loc in locations) {
                    const { x, y } = locations[loc];
                    ctx.fillStyle = '#64748b'; // slate-500
                    ctx.beginPath();
                    ctx.arc(x, y, 5, 0, 2 * Math.PI);
                    ctx.fill();
                    ctx.fillStyle = '#334155'; // slate-700
                    ctx.font = '12px Vazirmatn';
                    ctx.textAlign = 'center';
                    ctx.fillText(loc, x, y - 10);
                }
                // Draw shipments
                shipments.forEach(s => {
                    if (s.status !== 'در حال حمل') return;
                    const start = locations[s.from];
                    const end = locations[s.to];
                    if (!start || !end) return;

                    // Draw path
                    ctx.beginPath();
                    ctx.moveTo(start.x, start.y);
                    ctx.lineTo(end.x, end.y);
                    ctx.strokeStyle = '#cbd5e1'; // slate-300
                    ctx.setLineDash([5, 5]);
                    ctx.stroke();
                    ctx.setLineDash([]);

                    // Draw shipment dot
                    const currentX = start.x + (end.x - start.x) * (s.progress / 100);
                    const currentY = start.y + (end.y - start.y) * (s.progress / 100);
                    ctx.fillStyle = '#3b82f6'; // blue-500
                    ctx.beginPath();
                    ctx.arc(currentX, currentY, 7, 0, 2 * Math.PI);
                    ctx.fill();
                    ctx.strokeStyle = 'white';
                    ctx.lineWidth = 2;
                    ctx.stroke();
                });
            }

            function animate() {
                drawMap();
                animationFrameId = requestAnimationFrame(animate);
            }
            
            // --- Interactivity ---
            tabButtons.forEach(button => {
                button.addEventListener('click', (e) => {
                    e.preventDefault();
                    const targetId = button.dataset.target;
                    contentSections.forEach(section => section.classList.remove('active'));
                    document.getElementById(targetId).classList.add('active');
                    tabButtons.forEach(btn => btn.classList.remove('active'));
                    button.classList.add('active');
                    mainHeaderTitle.innerText = button.innerText.trim();

                    if (targetId === 'supply-chain') {
                        if(!animationFrameId) animate();
                    } else {
                        cancelAnimationFrame(animationFrameId);
                        animationFrameId = null;
                    }
                });
            });

            shipmentFilterInput.addEventListener('input', (e) => {
                const query = e.target.value.toLowerCase();
                const filtered = shipments.filter(s => 
                    s.id.toLowerCase().includes(query) ||
                    s.from.toLowerCase().includes(query) ||
                    s.to.toLowerCase().includes(query)
                );
                renderTables(filtered);
            });

            // --- Smart Management Features Logic ---
            async function handleSmartRequest(button, responseBox, promptGenerator) {
                const originalHTML = button.innerHTML;
                button.innerHTML = '<div class="smart-loading-spinner mx-auto" style="width:16px; height:16px; border-width:2px;"></div>';
                button.disabled = true;
                showLoading(responseBox);
                const prompt = promptGenerator();
                const response = await callGeminiAPI(prompt);
                responseBox.innerHTML = DOMPurify.sanitize(response.replace(/\n/g, '<br>'));
                button.innerHTML = originalHTML;
                button.disabled = false;
            }
            
            // Other Smart Management buttons
            document.getElementById('smart-counterfeit-check-btn').addEventListener('click', (e) => handleSmartRequest(e.currentTarget, document.getElementById('smart-counterfeit-response'), () => `شما سیستم مدیریت هوشمند ملی برای امنیت زنجیره تأمین هستید. با بررسی داده‌های شبکه، یک الگوی مشکوک (مانند اسکن همزمان یک محصول در دو شهر مختلف) را شناسایی کرده و ریسک آن را توضیح دهید.`));
            document.getElementById('smart-doc-check-btn').addEventListener('click', (e) => handleSmartRequest(e.currentTarget, document.getElementById('smart-doc-check-response'), () => `شما سیستم مدیریت هوشمند ملی برای امور گمرکی هستید. یک سند بارنامه فرضی را بررسی کرده‌اید و یک خطای رایج (مثلاً عدم تطابق وزن) در آن یافته‌اید. خطا را توضیح داده و راه اصلاح آن را پیشنهاد دهید.`));
            document.getElementById('smart-bottleneck-btn').addEventListener('click', (e) => handleSmartRequest(e.currentTarget, document.getElementById('smart-bottleneck-response'), () => `شما سیستم مدیریت هوشمند ملی برای بهینه‌سازی فرآیند هستید. با توجه به داده‌های عملکرد شرکای لجستیکی (${JSON.stringify(mockData.performance)})، اصلی‌ترین گلوگاه را شناسایی کرده و دو پیشنهاد عملی برای بهبود همکاری با آن شریک ارائه دهید.`));
            
            // --- Live Data Simulation ---
            function updateData() {
                // Simulate progress
                const inTransitShipment = shipments.find(s => s.status === 'در حال حمل');
                if (inTransitShipment) {
                    inTransitShipment.progress += 5;
                    if (inTransitShipment.progress >= 100) {
                        inTransitShipment.progress = 100;
                        inTransitShipment.status = 'در گمرک';
                    }
                }

                // Update KPIs and charts
                const statuses = shipments.reduce((acc, s) => {
                    acc[s.status] = (acc[s.status] || 0) + 1;
                    return acc;
                }, {});

                document.getElementById('kpi-in-transit').innerText = statuses['در حال حمل'] || 0;
                shipmentStatusChart.data.datasets[0].data = [
                    statuses['در حال حمل'] || 0,
                    statuses['در گمرک'] || 0,
                    statuses['تحویل شده'] || 0,
                    statuses['با تأخیر'] || 0
                ];
                shipmentStatusChart.update();
                
                // Re-render tables with current filter
                const query = shipmentFilterInput.value.toLowerCase();
                const filtered = shipments.filter(s => 
                    s.id.toLowerCase().includes(query) ||
                    s.from.toLowerCase().includes(query) ||
                    s.to.toLowerCase().includes(query)
                );
                renderTables(filtered);
            }

            // --- Initial Load ---
            renderTables();
            setInterval(updateData, 5000); // Update every 5 seconds
        });
    </script>

</body>
</html>
